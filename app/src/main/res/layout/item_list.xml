<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_margin="@dimen/margin">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Text_padding_StartEnd"
        android:layout_marginEnd="@dimen/Text_padding_StartEnd"
        android:layout_marginTop="@dimen/Text_padding_StartEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title_textSize"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Text_padding_StartEnd"
        android:layout_marginEnd="@dimen/Text_padding_StartEnd"
        android:layout_marginTop="@dimen/Text_padding_StartEnd"
        android:layout_marginBottom="@dimen/Text_padding_StartEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/content_textSize"
        android:ellipsize="end"/>

</LinearLayout>